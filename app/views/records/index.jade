extends ../shared/template

block js
  script(src='/js/source/find.js')

block content
  .row
    .small-6.columns
      .row
        .small-2.columns.limit
          label Records per page
          input#limit(type='text')
  .row
    .small-12.columns
      .list-table.hide
        table#records
          thead
            tr
              th Go to Record
              th: a.sort.date(href='#') Date
              th: a.sort.lot(href='#') Lot
              th: a.sort.occasion(href='#') Event
              th Attendants
          tbody
  .row
    .small-2.columns
      label &nbsp
      button#prev.tiny.radius.expand Previous
    .small-3.columns: &nbsp
    .small-2.columns
      label &nbsp
      p#page 1
    .small-2.columns
      label &nbsp
      button#next.tiny.radius.expand Next
